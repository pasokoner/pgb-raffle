{
	"name": "raffle-system",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"drizzle:generate": "drizzle-kit generate:pg --schema=./src/lib/server/db/schema.ts",
		"drizzle:push": "drizzle-kit push:pg --config=./drizzle.config.ts",
		"drizzle:seed": "node --loader esbuild-register/loader -r esbuild-register ./src/lib/server/db/seed.ts"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.3.1",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"drizzle-kit": "^0.20.7",
		"esbuild-register": "^3.5.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.30.0",
		"pg": "^8.11.3",
		"postcss": "^8.4.32",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-headless-table": "^0.17.7",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.0.0"
	},
	"type": "module",
	"dependencies": {
		"bits-ui": "^0.11.8",
		"clsx": "^2.0.0",
		"date-fns": "^3.0.1",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.29.1",
		"html2pdf.js": "^0.10.1",
		"js-confetti": "^0.12.0",
		"lucide-svelte": "^0.298.0",
		"postgres": "^3.4.3",
		"svelte-inview": "^4.0.2",
		"tailwind-merge": "^2.1.0",
		"tailwind-variants": "^0.1.19",
		"xlsx": "^0.18.5",
		"zod": "^3.22.4",
		"zod-form-data": "^2.0.2"
	}
}
